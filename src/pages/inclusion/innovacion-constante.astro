---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Sparkles, Lightbulb, Rocket, Users, BookOpen, Zap, Phone, Mail } from 'lucide-react';

const proyectos = [
  {
    icon: Rocket,
    title: 'Tecnologías de Apoyo',
    description:
      'Investigamos y desarrollamos soluciones tecnológicas innovadoras para mejorar la autonomía personal.',
    color: 'from-teal-500 to-blue-500',
  },
  {
    icon: BookOpen,
    title: 'Investigación Aplicada',
    description:
      'Colaboramos con universidades en proyectos de investigación sobre diversidad funcional e inclusión.',
    color: 'from-blue-500 to-cyan-500',
  },
  {
    icon: Lightbulb,
    title: 'Metodologías Innovadoras',
    description:
      'Desarrollamos nuevos enfoques y metodologías para la intervención y el apoyo personalizado.',
    color: 'from-cyan-500 to-teal-500',
  },
];

const innovaciones = [
  'Plataforma digital de gestión de apoyos personalizados',
  'Programa de realidad virtual para entrenamiento de habilidades',
  'Sistema de comunicación aumentativa basado en IA',
  'App móvil para autonomía en desplazamientos',
  'Metodología de intervención temprana innovadora',
  'Red de sensores IoT para entornos seguros',
];
---

<BaseLayout
  title="Innovación Constante | DiverMataró"
  description="Buscamos nuevas formas de mejorar la calidad de vida y promover la inclusión real a través de la innovación y la tecnología."
  image="/logoDiverMataro.png"
>
  <!-- Hero Section -->
  <section
    class="relative pt-32 pb-20 bg-linear-to-br from-teal-50 to-blue-50 dark:from-gray-900 dark:to-teal-900/20 overflow-hidden"
  >
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"
      >
      </div>
    </div>

    <!-- Decorative Elements -->
    <div
      class="absolute top-20 right-20 w-72 h-72 bg-linear-to-br from-teal-400/20 to-blue-400/20 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-96 h-96 bg-linear-to-tr from-cyan-400/20 to-teal-400/20 rounded-full blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm">
          <li>
            <a
              href="/"
              class="text-gray-600 dark:text-gray-300 hover:text-teal-600 dark:hover:text-teal-400 transition-colors"
              >Inicio</a
            >
          </li>
          <li class="text-gray-400">/</li>
          <li class="text-teal-600 dark:text-teal-400 font-semibold">Innovación Constante</li>
        </ol>
      </nav>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <!-- Icon Badge -->
          <div
            class="inline-flex items-center px-4 py-2 bg-linear-to-r from-teal-100 to-blue-100 dark:from-teal-900/30 dark:to-blue-900/30 rounded-full mb-6"
          >
            <Sparkles className="w-5 h-5 text-teal-600 mr-2" />
            <span class="text-sm font-semibold text-teal-700 dark:text-teal-300"
              >Innovación Constante</span
            >
          </div>

          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            Innovando para el futuro
          </h1>

          <p class="text-xl text-gray-600 dark:text-gray-100 mb-8">
            En DiverMataró apostamos por la innovación constante, buscando nuevas formas de mejorar
            la calidad de vida de las personas con diversidad funcional a través de la tecnología,
            la investigación y metodologías innovadoras.
          </p>

          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contacto/"
              class="inline-flex items-center justify-center px-8 py-4 bg-linear-to-r from-teal-600 to-blue-600 text-white font-semibold rounded-2xl hover:from-teal-700 hover:to-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg"
            >
              Colabora en innovación
              <Mail className="w-5 h-5 ml-2" />
            </a>
            <a
              href="#proyectos"
              class="inline-flex items-center justify-center px-8 py-4 bg-white dark:bg-gray-800 text-teal-600 dark:text-teal-400 font-semibold rounded-2xl hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-300 border-2 border-teal-200 dark:border-teal-800"
            >
              Ver proyectos
            </a>
          </div>
        </div>

        <!-- Image Placeholder -->
        <div class="relative">
          <div
            class="aspect-square bg-linear-to-br from-teal-400 to-blue-500 rounded-3xl shadow-2xl flex items-center justify-center"
          >
            <Sparkles className="w-32 h-32 text-white/80" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Proyectos Section -->
  <section id="proyectos" class="py-32 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Líneas de Innovación
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-100 max-w-3xl mx-auto">
          Trabajamos en diferentes áreas de innovación para impulsar la inclusión y mejorar la
          calidad de vida.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          proyectos.map((proyecto, index) => (
            <div
              class="group bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-gray-100 dark:border-gray-700"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div
                class={`w-16 h-16 bg-linear-to-br ${proyecto.color} rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}
              >
                <proyecto.icon className="w-8 h-8 text-white" />
              </div>
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
                {proyecto.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-100">{proyecto.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Innovaciones Section -->
  <section
    class="py-32 bg-linear-to-br from-gray-50 to-teal-50 dark:from-gray-800 dark:to-teal-900/10"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative">
          <div
            class="aspect-square bg-linear-to-br from-teal-400 to-blue-500 rounded-3xl shadow-2xl flex items-center justify-center"
          >
            <Rocket className="w-32 h-32 text-white/80" />
          </div>
        </div>

        <div>
          <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
            Innovaciones en desarrollo
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-100 mb-8">
            Actualmente estamos trabajando en varios proyectos innovadores que transformarán la
            forma de apoyar a las personas con diversidad funcional.
          </p>

          <div class="space-y-4">
            {
              innovaciones.map((innovacion, index) => (
                <div
                  class="flex items-start gap-4"
                  data-aos="fade-left"
                  data-aos-delay={index * 50}
                >
                  <div class="shrink-0 w-6 h-6 bg-linear-to-br from-teal-500 to-blue-500 rounded-full flex items-center justify-center mt-1">
                    <Zap className="w-4 h-4 text-white" />
                  </div>
                  <p class="text-lg text-gray-700 dark:text-gray-100">{innovacion}</p>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Colaboraciones Section -->
  <section class="py-32 bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Colaboraciones
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-100 max-w-3xl mx-auto">
          Trabajamos con universidades, centros de investigación y empresas tecnológicas para
          impulsar la innovación.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {
          [
            {
              icon: BookOpen,
              title: 'Universidades',
              description: 'Proyectos de investigación conjuntos',
            },
            {
              icon: Rocket,
              title: 'Startups tecnológicas',
              description: 'Desarrollo de soluciones innovadoras',
            },
            {
              icon: Users,
              title: 'Centros de investigación',
              description: 'Estudios sobre diversidad funcional',
            },
            {
              icon: Lightbulb,
              title: 'Empresas de tecnología',
              description: 'Implementación de nuevas herramientas',
            },
          ].map((colaboracion, index) => (
            <div class="text-center" data-aos="fade-up" data-aos-delay={index * 100}>
              <div class="inline-flex w-16 h-16 bg-linear-to-br from-teal-500 to-blue-500 rounded-2xl items-center justify-center mb-4">
                <colaboracion.icon className="w-8 h-8 text-white" />
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                {colaboracion.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-100">{colaboracion.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Impacto Section -->
  <section
    class="py-32 bg-linear-to-br from-gray-50 to-blue-50 dark:from-gray-800 dark:to-blue-900/10"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Impacto de la innovación
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-100 max-w-3xl mx-auto">
          Nuestros proyectos innovadores están generando un impacto real en la vida de las personas.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          [
            {
              number: '15+',
              label: 'Proyectos innovadores',
              description: 'En desarrollo o implementados',
            },
            {
              number: '200+',
              label: 'Personas beneficiadas',
              description: 'Por nuestras innovaciones',
            },
            {
              number: '8',
              label: 'Colaboraciones activas',
              description: 'Con universidades y empresas',
            },
          ].map((stat, index) => (
            <div
              class="bg-white dark:bg-gray-800 rounded-3xl p-8 shadow-lg text-center"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              <div class="text-5xl font-bold bg-linear-to-r from-teal-600 to-blue-600 bg-clip-text text-transparent mb-2">
                {stat.number}
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{stat.label}</h3>
              <p class="text-gray-600 dark:text-gray-100">{stat.description}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-32 bg-linear-to-r from-teal-600 to-blue-600 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.3) 1px, transparent 0); background-size: 40px 40px;"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">¿Tienes una idea innovadora?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Estamos abiertos a colaboraciones y nuevas propuestas que puedan mejorar la vida de las
        personas con diversidad funcional.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/contacto/"
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-teal-600 font-semibold rounded-2xl hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          Contactar ahora
          <Phone className="w-5 h-5 ml-2" />
        </a>
        <a
          href="/"
          class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-semibold rounded-2xl hover:bg-white hover:text-teal-600 transition-all duration-300"
        >
          Volver al inicio
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
