---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import { Users, Target, Heart, Award, Calendar, MapPin } from 'lucide-react';

const teamMembers = [
  {
    name: 'María García',
    role: 'Presidenta',
    description:
      'Fundadora de la asociación, comprometida con la inclusión social desde hace más de 20 años.',
    image: '/images/team/maria-garcia.jpg',
  },
  {
    name: 'Juan Martínez',
    role: 'Vicepresidente',
    description:
      'Especialista en accesibilidad y derechos de las personas con diversidad funcional.',
    image: '/images/team/juan-martinez.jpg',
  },
  {
    name: 'Carmen López',
    role: 'Secretaria',
    description: 'Trabajadora social con amplia experiencia en el ámbito de la discapacidad.',
    image: '/images/team/carmen-lopez.jpg',
  },
  {
    name: 'Antonio Ruiz',
    role: 'Tesorero',
    description: 'Profesional del sector financiero, voluntario comprometido con la causa.',
    image: '/images/team/antonio-ruiz.jpg',
  },
];

const milestones = [
  {
    year: '2002',
    title: 'Fundación de la asociación',
    description:
      'Un grupo de familias se une para crear una asociación que defienda los derechos de las personas con diversidad funcional en Mataró.',
  },
  {
    year: '2005',
    title: 'Primera sede propia',
    description: 'Conseguimos nuestra primera sede gracias al apoyo del Ayuntamiento de Mataró.',
  },
  {
    year: '2010',
    title: 'Programa de empleo',
    description:
      'Lanzamos nuestro programa de inserción laboral para personas con diversidad funcional.',
  },
  {
    year: '2015',
    title: 'Centro de día',
    description:
      'Inauguramos nuestro centro de día con servicios de terapia ocupacional y actividades.',
  },
  {
    year: '2020',
    title: 'Expansión digital',
    description: 'Adaptamos nuestros servicios a la era digital, ampliando nuestro alcance.',
  },
];

const values = [
  {
    title: 'Inclusión',
    description:
      'Promovemos la participación plena de todas las personas en la sociedad, sin exclusiones ni barreras.',
    icon: Users,
  },
  {
    title: 'Dignidad',
    description:
      'Defendemos el derecho de cada persona a ser tratada con respeto y a tener una vida digna.',
    icon: Heart,
  },
  {
    title: 'Compromiso',
    description:
      'Trabajamos con dedicación y pasión para mejorar la calidad de vida de las personas con diversidad funcional.',
    icon: Target,
  },
  {
    title: 'Excelencia',
    description: 'Buscamos la máxima calidad en nuestros servicios y programas.',
    icon: Award,
  },
];
---

<BaseLayout title="Quiénes Somos" description="Conoce la historia, misión y equipo de DiverMataró.">
  <Navigation />

  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section class="bg-linear-to-br from-blue-600 to-blue-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Quiénes Somos</h1>
        <p class="text-xl mb-8 text-blue-100 max-w-3xl mx-auto">
          DiverMataró es una organización sin ánimo de lucro que trabaja por la inclusión social y
          los derechos de las personas con diversidad funcional.
        </p>
      </div>
    </section>

    <!-- Mission Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Nuestra Misión</h2>
            <div class="space-y-4 text-gray-600">
              <p class="text-lg">
                Trabajamos por una sociedad más inclusiva, accesible y justa para todas las
                personas, especialmente aquellas con diversidad funcional.
              </p>
              <p>
                Nuestro objetivo es promover la autonomía personal, la participación social y la
                calidad de vida de las personas con diversidad funcional y sus familias.
              </p>
              <p>
                Luchamos contra la discriminación y trabajamos para eliminar las barreras que
                impiden la plena inclusión de todas las personas en la sociedad.
              </p>
            </div>
          </div>
          <div class="relative">
            <div class="bg-blue-100 rounded-2xl p-8">
              <div
                class="aspect-w-16 aspect-h-9 bg-blue-200 rounded-lg flex items-center justify-center"
              >
                <div class="text-center">
                  <Users className="w-16 h-16 text-blue-600 mx-auto mb-4" />
                  <p class="text-blue-700 font-semibold">Comunidad inclusiva</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Nuestros Valores</h2>
          <p class="text-lg text-gray-600">Los principios que guían nuestro trabajo diario</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            values.map((value) => (
              <div class="text-center">
                <div class="w-16 h-16 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <value.icon className="w-8 h-8" />
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-2">{value.title}</h3>
                <p class="text-gray-600">{value.description}</p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- History Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Nuestra Historia</h2>
          <p class="text-lg text-gray-600">Más de 20 años trabajando por la inclusión social</p>
        </div>

        <div class="relative">
          <!-- Timeline line -->
          <div class="absolute left-1/2 transform -translate-x-px h-full w-0.5 bg-blue-200"></div>

          <div class="space-y-12">
            {
              milestones.map((milestone, index) => (
                <div
                  class={`relative ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'} flex flex-col md:flex items-center`}
                >
                  {/* Timeline dot */}
                  <div class="absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-blue-600 rounded-full border-4 border-white shadow" />

                  {/* Content */}
                  <div
                    class={`w-full md:w-5/12 ${index % 2 === 0 ? 'md:pr-8 md:text-right' : 'md:pl-8'}`}
                  >
                    <div class="bg-gray-50 rounded-lg p-6">
                      <div class="flex items-center mb-2">
                        <Calendar className="w-5 h-5 text-blue-600 mr-2" />
                        <span class="text-lg font-bold text-blue-600">{milestone.year}</span>
                      </div>
                      <h3 class="text-xl font-semibold text-gray-900 mb-2">{milestone.title}</h3>
                      <p class="text-gray-600">{milestone.description}</p>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Team Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Nuestro Equipo</h2>
          <p class="text-lg text-gray-600">Personas comprometidas con la causa de la inclusión</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            teamMembers.map((member) => (
              <div class="text-center">
                <div class="w-32 h-32 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <Users className="w-16 h-16" />
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-1">{member.name}</h3>
                <p class="text-blue-600 font-medium mb-2">{member.role}</p>
                <p class="text-gray-600 text-sm">{member.description}</p>
              </div>
            ))
          }
        </div>

        <div class="text-center mt-12">
          <p class="text-gray-600 mb-4">
            Además de nuestro equipo directivo, contamos con un grupo de voluntarios y colaboradores
            que hacen posible nuestro trabajo diario.
          </p>
          <a
            href="/contacto/#voluntariado"
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
          >
            Quiero ser voluntario
          </a>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-blue-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">¿Quieres formar parte de nuestra historia?</h2>
        <p class="text-xl mb-8 text-blue-100">
          Tu apoyo es fundamental para continuar nuestro trabajo por una sociedad más inclusiva.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/inscripcion/"
            class="inline-flex items-center justify-center px-8 py-3 bg-white text-blue-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            <Heart className="mr-2 w-5 h-5" />
            Asociarse
          </a>
          <a
            href="/contacto/"
            class="inline-flex items-center justify-center px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-blue-600 transition-colors"
          >
            <MapPin className="mr-2 w-5 h-5" />
            Visítanos
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
