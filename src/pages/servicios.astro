---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Users, Heart, BookOpen, Activity, MapPin, Clock, Phone } from 'lucide-react';

const services = [
  {
    title: 'Terapia Ocupacional',
    description:
      'Programas diseñados para mejorar la autonomía personal y las habilidades de la vida diaria.',
    icon: Activity,
    features: [
      'Talleres prácticos',
      'Adaptación de actividades',
      'Evaluación personalizada',
      'Seguimiento individual',
    ],
  },
  {
    title: 'Apoyo Familiar',
    description:
      'Acompañamiento y orientación a familias y cuidadores de personas con diversidad funcional.',
    icon: Heart,
    features: [
      'Grupos de apoyo',
      'Orientación profesional',
      'Recursos informativos',
      'Red de contactos',
    ],
  },
  {
    title: 'Formación y Empleo',
    description:
      'Talleres formativos y programas de inserción laboral adaptados a las necesidades de cada persona.',
    icon: BookOpen,
    features: [
      'Capacitación laboral',
      'Prácticas en empresas',
      'Orientación vocacional',
      'Acompañamiento laboral',
    ],
  },
  {
    title: 'Actividades Sociales',
    description: 'Eventos, excursiones y actividades lúdicas para fomentar la inclusión social.',
    icon: Users,
    features: [
      'Excursiones inclusivas',
      'Talleres creativos',
      'Actividades deportivas',
      'Eventos culturales',
    ],
  },
];

const upcomingEvents = [
  {
    title: 'Taller de arte terapia',
    date: '20 Nov 2024',
    time: '16:00 - 18:00',
    location: 'Sede de la asociación',
    type: 'Taller',
  },
  {
    title: 'Reunión de familias',
    date: '25 Nov 2024',
    time: '18:00 - 20:00',
    location: 'Centro cívico',
    type: 'Reunión',
  },
  {
    title: 'Excursión inclusiva',
    date: '02 Dic 2024',
    time: '10:00 - 14:00',
    location: 'Parque de Mataró',
    type: 'Excursión',
  },
  {
    title: 'Taller de cocina adaptada',
    date: '05 Dic 2024',
    time: '17:00 - 19:00',
    location: 'Sede de la asociación',
    type: 'Taller',
  },
];

const schedule = [
  {
    day: 'Lunes',
    activities: [
      { time: '16:00-18:00', activity: 'Terapia ocupacional' },
      { time: '18:00-20:00', activity: 'Grupo de apoyo familiar' },
    ],
  },
  {
    day: 'Martes',
    activities: [
      { time: '16:00-18:00', activity: 'Taller de arte' },
      { time: '18:00-20:00', activity: 'Actividad física adaptada' },
    ],
  },
  {
    day: 'Miércoles',
    activities: [
      { time: '16:00-18:00', activity: 'Formación laboral' },
      { time: '18:00-20:00', activity: 'Terapia de grupo' },
    ],
  },
  {
    day: 'Jueves',
    activities: [
      { time: '16:00-18:00', activity: 'Música terapia' },
      { time: '18:00-20:00', activity: 'Taller de habilidades sociales' },
    ],
  },
  {
    day: 'Viernes',
    activities: [
      { time: '16:00-18:00', activity: 'Excursiones y salidas' },
      { time: '18:00-20:00', activity: 'Actividades de ocio' },
    ],
  },
];
---

<BaseLayout
  title="Servicios y Actividades"
  description="Descubre todos los servicios y actividades que ofrece DiverMataró."
>
  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section class="bg-linear-to-br from-green-600 to-green-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Servicios y Actividades</h1>
        <p class="text-xl mb-8 text-green-100 max-w-3xl mx-auto">
          Ofrecemos una amplia variedad de servicios y actividades adaptadas a las necesidades de
          cada persona, promoviendo la autonomía, la inclusión social y la calidad de vida.
        </p>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Nuestros Servicios</h2>
          <p class="text-lg text-gray-600">Servicios adaptados a las necesidades de cada persona</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {
            services.map((service) => (
              <div class="bg-gray-50 rounded-lg p-8 hover:shadow-lg transition-shadow">
                <div class="flex items-center mb-6">
                  <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center mr-4">
                    <service.icon className="w-6 h-6" />
                  </div>
                  <h3 class="text-xl font-semibold text-gray-900">{service.title}</h3>
                </div>

                <p class="text-gray-600 mb-6">{service.description}</p>

                <ul class="space-y-2">
                  {service.features.map((feature) => (
                    <li class="flex items-center text-sm text-gray-600">
                      <div class="w-2 h-2 bg-green-600 rounded-full mr-3" />
                      {feature}
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>

        <div class="text-center mt-12">
          <p class="text-gray-600 mb-6">
            ¿Tienes alguna necesidad específica? Contáctanos y estudiaremos cómo podemos ayudarte.
          </p>
          <a
            href="/contacto/"
            class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors"
          >
            <Phone className="mr-2 w-5 h-5" />
            Contactar
          </a>
        </div>
      </div>
    </section>

    <!-- Upcoming Events Section -->
    <section id="calendario" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Próximos Eventos</h2>
          <p class="text-lg text-gray-600">No te pierdas nuestras actividades y eventos</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            upcomingEvents.map((event) => (
              <div class="bg-white rounded-lg p-6 border border-gray-200 hover:shadow-md transition-shadow">
                <div class="flex items-start justify-between mb-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    {event.type}
                  </span>
                  <div class="text-right">
                    <p class="text-sm font-medium text-gray-900">{event.date}</p>
                    <p class="text-sm text-gray-500">{event.time}</p>
                  </div>
                </div>

                <h3 class="text-lg font-semibold text-gray-900 mb-2">{event.title}</h3>

                <div class="flex items-center text-sm text-gray-600 mb-4">
                  <MapPin className="w-4 h-4 mr-1" />
                  {event.location}
                </div>

                <button class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors">
                  Apuntarme
                </button>
              </div>
            ))
          }
        </div>

        <div class="text-center mt-8">
          <p class="text-gray-600 mb-4">
            ¿Quieres recibir información sobre nuestros eventos? Suscríbete a nuestra lista de
            correo.
          </p>
          <form class="max-w-md mx-auto flex gap-4">
            <input
              type="email"
              placeholder="Tu email"
              class="flex-1 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-green-500 focus:border-green-500"
              required
            />
            <button
              type="submit"
              class="px-6 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors"
            >
              Suscribirme
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Schedule Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Horario Semanal</h2>
          <p class="text-lg text-gray-600">Organización de nuestras actividades diarias</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
          {
            schedule.map((day) => (
              <div class="bg-gray-50 rounded-lg p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 text-center">{day.day}</h3>
                <div class="space-y-4">
                  {day.activities.map((activity) => (
                    <div class="border-l-4 border-green-600 pl-4">
                      <p class="text-sm font-medium text-gray-900">{activity.activity}</p>
                      <p class="text-xs text-gray-600 flex items-center mt-1">
                        <Clock className="w-3 h-3 mr-1" />
                        {activity.time}
                      </p>
                    </div>
                  ))}
                </div>
              </div>
            ))
          }
        </div>

        <div class="text-center mt-8">
          <p class="text-gray-600 mb-4">
            Las actividades pueden variar según la época del año y la demanda. Consulta siempre el
            calendario actualizado.
          </p>
          <a
            href="/contacto/"
            class="inline-flex items-center px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors"
          >
            <Phone className="mr-2 w-5 h-5" />
            Consultar disponibilidad
          </a>
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-16 bg-green-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">¿Quieres participar en nuestras actividades?</h2>
        <p class="text-xl mb-8 text-green-100">
          No necesitas ser socio para participar en muchas de nuestras actividades. ¡Todos son
          bienvenidos!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/inscripcion/"
            class="inline-flex items-center justify-center px-8 py-3 bg-white text-green-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
          >
            <Users className="mr-2 w-5 h-5" />
            Asociarse
          </a>
          <a
            href="/contacto/"
            class="inline-flex items-center justify-center px-8 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-green-600 transition-colors"
          >
            <Phone className="mr-2 w-5 h-5" />
            Consultar actividades
          </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
