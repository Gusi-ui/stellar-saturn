---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import FeaturesSection from '../components/FeaturesSection.astro';
import TestimonialsSection from '../components/TestimonialsSection.astro';
import CTASection from '../components/CTASection.astro';

// Blog posts data
const allPosts = Object.values(
  await import.meta.glob<{
    frontmatter: {
      date: string;
      title: string;
      category: string;
      excerpt?: string;
      description: string;
      slug: string;
    };
  }>('../content/blog/*.md', { eager: true })
);
const featuredPosts = allPosts
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime())
  .slice(0, 3);

// Latest events
const upcomingEvents = [
  {
    title: 'Taller de arte terapia',
    date: '20 Nov 2024',
    time: '16:00 - 18:00',
    location: 'Sede de la asociación',
    description:
      'Sesión de arte terapia para promover la expresión creativa y el bienestar emocional.',
    image: '/images/events/arte-terapia.jpg',
  },
  {
    title: 'Reunión de familias',
    date: '25 Nov 2024',
    time: '18:00 - 20:00',
    location: 'Centro cívico',
    description: 'Espacio de encuentro para compartir experiencias y recibir apoyo mutuo.',
    image: '/images/events/reunion-familias.jpg',
  },
  {
    title: 'Excursión inclusiva',
    date: '02 Dic 2024',
    time: '10:00 - 14:00',
    location: 'Parque de Mataró',
    description: 'Actividad al aire libre para disfrutar de la naturaleza en compañía.',
    image: '/images/events/excursion.jpg',
  },
];
---

<BaseLayout
  title="DiverMataró - Construyendo un mundo más inclusivo"
  description="Asociación de Diversidad Funcional de Mataró. Apoyamos a personas con diversidad funcional y sus familias a través de actividades, talleres y servicios inclusivos."
  image="/logoDiverMataro.png"
>
  <!-- Hero Section -->
  <HeroSection />

  <!-- Features Section -->
  <FeaturesSection />

  <!-- Latest Events Section -->
  <section class="py-32 bg-white dark:bg-gray-900 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <div
        class="absolute inset-0"
        style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"
      >
      </div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <div
          class="inline-flex items-center px-4 py-2 bg-linear-to-r from-green-100 to-blue-100 dark:from-green-900/30 dark:to-blue-900/30 rounded-full mb-6"
        >
          <svg
            class="w-5 h-5 text-green-600 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <span class="text-sm font-semibold text-green-700 dark:text-green-300"
            >Próximos Eventos</span
          >
        </div>

        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          No te pierdas nuestras actividades
        </h2>

        <p class="text-xl text-gray-600 dark:text-gray-100 max-w-3xl mx-auto">
          Participa en nuestros talleres, eventos y actividades diseñadas para promover la inclusión
          y el bienestar.
        </p>
      </div>

      <!-- Events Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {
          upcomingEvents.map((event, index) => (
            <div
              class="group bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              {/* Event Date Badge */}
              <div class="relative">
                <div class="absolute top-4 right-4 bg-linear-to-r from-blue-600 to-purple-600 text-white px-4 py-2 rounded-full text-sm font-semibold z-10">
                  {event.date}
                </div>
                {/* Event Image Placeholder */}
                <div class="h-48 bg-linear-to-br from-blue-400 to-purple-500 flex items-center justify-center">
                  <svg
                    class="w-16 h-16 text-white/80"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    />
                  </svg>
                </div>
              </div>

              {/* Event Content */}
              <div class="p-6">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 transition-colors">
                  {event.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-100 mb-4">{event.description}</p>

                {/* Event Details */}
                <div class="space-y-2 text-sm text-gray-500 dark:text-gray-300">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    {event.time}
                  </div>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                    {event.location}
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <!-- CTA -->
      <div class="text-center">
        <a
          href="/servicios/#calendario"
          class="inline-flex items-center px-8 py-4 bg-linear-to-r from-blue-600 to-purple-600 text-white font-semibold rounded-2xl hover:from-blue-700 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          Ver calendario completo
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Blog Section -->
  <section
    class="py-32 bg-linear-to-br from-gray-50 to-blue-50 dark:from-gray-900 dark:to-blue-900 relative overflow-hidden"
  >
    <!-- Background Elements -->
    <div
      class="absolute top-20 right-20 w-72 h-72 bg-linear-to-br from-blue-400/20 to-purple-400/20 rounded-full blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-20 left-20 w-96 h-96 bg-linear-to-tr from-pink-400/20 to-orange-400/20 rounded-full blur-3xl"
    >
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-20">
        <div
          class="inline-flex items-center px-4 py-2 bg-white dark:bg-gray-800 rounded-full mb-6 shadow-lg"
        >
          <svg
            class="w-5 h-5 text-blue-600 mr-2"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
            ></path>
          </svg>
          <span class="text-sm font-semibold text-blue-700 dark:text-blue-300">Blog</span>
        </div>

        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Novedades y actualidad
        </h2>

        <p class="text-xl text-gray-600 dark:text-gray-100 max-w-3xl mx-auto">
          Entérate de las últimas noticias, eventos y actividades de nuestra asociación.
        </p>
      </div>

      <!-- Blog Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {
          featuredPosts.map((post, index) => (
            <article
              class="group bg-white dark:bg-gray-800 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-500 hover:-translate-y-2"
              data-aos="fade-up"
              data-aos-delay={index * 100}
            >
              {/* Post Image Placeholder */}
              <div class="h-48 bg-linear-to-br from-green-400 to-blue-500 flex items-center justify-center">
                <svg
                  class="w-16 h-16 text-white/80"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                  />
                </svg>
              </div>

              {/* Post Content */}
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <span class="text-sm font-semibold text-blue-600 dark:text-blue-400">
                    {post.frontmatter.category}
                  </span>
                  <time class="text-sm text-gray-500 dark:text-gray-300">
                    {new Date(post.frontmatter.date).toLocaleDateString('es-ES', {
                      day: 'numeric',
                      month: 'long',
                      year: 'numeric',
                    })}
                  </time>
                </div>

                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 transition-colors">
                  {post.frontmatter.title}
                </h3>

                <p class="text-gray-600 dark:text-gray-100 mb-4 line-clamp-3">
                  {post.frontmatter.excerpt || post.frontmatter.description}
                </p>

                <a
                  href={`/blog/${post.frontmatter.slug}/`}
                  class="inline-flex items-center text-blue-600 dark:text-blue-400 font-semibold hover:text-blue-700 dark:hover:text-blue-300 transition-colors"
                >
                  Leer más
                  <svg
                    class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"
                    />
                  </svg>
                </a>
              </div>
            </article>
          ))
        }
      </div>

      <!-- CTA -->
      <div class="text-center">
        <a
          href="/blog/"
          class="inline-flex items-center px-8 py-4 bg-linear-to-r from-green-600 to-blue-600 text-white font-semibold rounded-2xl hover:from-green-700 hover:to-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          Ver todas las noticias
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <TestimonialsSection />

  <!-- CTA Section -->
  <CTASection />
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
