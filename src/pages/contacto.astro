---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Phone, Mail, MapPin, Clock, MessageCircle, Send } from 'lucide-react';

const contactMethods = [
  {
    title: "WhatsApp",
    description: "Contacto rápido y directo para dudas urgentes",
    details: "+34 600 000 000",
    action: "https://wa.me/34600000000",
    actionText: "Enviar WhatsApp",
    icon: MessageCircle,
    available: "Lunes a Viernes, 9:00-18:00"
  },
  {
    title: "Email",
    description: "Para consultas detalladas o documentación",
    details: "info@asociacionmataro.org",
    action: "mailto:info@asociacionmataro.org",
    actionText: "Enviar Email",
    icon: Mail,
    available: "Respuesta en 24-48 horas"
  },
  {
    title: "Teléfono",
    description: "Para asuntos que requieran conversación",
    details: "+34 93 000 00 00",
    action: "tel:+34930000000",
    actionText: "Llamar ahora",
    icon: Phone,
    available: "Lunes a Viernes, 9:00-14:00 y 16:00-18:00"
  }
];

const visitInfo = {
  address: "Carrer de l'Exemple, 123",
  city: "08302 Mataró, Barcelona",
  schedule: [
    { day: "Lunes", hours: "9:00 - 14:00 y 16:00 - 18:00" },
    { day: "Martes", hours: "9:00 - 14:00 y 16:00 - 18:00" },
    { day: "Miércoles", hours: "9:00 - 14:00 y 16:00 - 18:00" },
    { day: "Jueves", hours: "9:00 - 14:00 y 16:00 - 18:00" },
    { day: "Viernes", hours: "9:00 - 14:00 y 16:00 - 18:00" },
    { day: "Sábado", hours: "Cerrado" },
    { day: "Domingo", hours: "Cerrado" }
  ]
};

const faqs = [
  {
    question: "¿Cuál es el mejor momento para contactar?",
    answer: "Durante nuestro horario de oficina (9:00-14:00 y 16:00-18:00) podemos atenderte de forma inmediata. Fuera de este horario, puedes dejarnos un mensaje y te responderemos lo antes posible."
  },
  {
    question: "¿Puedo visitar la asociación sin cita previa?",
    answer: "Sí, puedes visitarnos durante nuestro horario de atención al público. Sin embargo, si quieres hablar con alguien específico o necesitas más tiempo, te recomendamos concertar una cita."
  },
  {
    question: "¿Cómo puedo colaborar con la asociación?",
    answer: "Hay muchas formas de colaborar: como voluntario, haciendo donaciones, participando en eventos o difundiendo nuestro trabajo. Contáctanos y te explicaremos las diferentes opciones."
  },
  {
    question: "¿Ofrecéis servicios de emergencia?",
    answer: "No somos un servicio de emergencia. Si tienes una situación urgente, contacta con los servicios de emergencia habituales (112). Para asuntos relacionados con nuestra asociación, puedes contactarnos por WhatsApp."
  }
];
---

<BaseLayout
  title="Contacto"
  description="Información de contacto de DiverMataró - Asociación de Diversidad Funcional de Mataró. WhatsApp, email, teléfono y dirección."
>
  <main id="main-content" class="flex-1">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-600 to-blue-800 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Contacto
        </h1>
        <p class="text-xl mb-8 text-blue-100 max-w-3xl mx-auto">
          Estamos aquí para ayudarte. Ponte en contacto con nosotros a través de cualquiera de nuestros canales 
          y te responderemos lo antes posible.
        </p>
        <div class="flex justify-center">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-6 max-w-md">
            <div class="flex items-center space-x-3">
              <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center">
                <MessageCircle class="w-6 h-6 text-white" />
              </div>
              <div class="text-left">
                <p class="text-white font-semibold">Respuesta rápida</p>
                <p class="text-blue-100 text-sm">Te contestamos en menos de 24 horas</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Methods -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Cómo contactar con nosotros</h2>
          <p class="text-lg text-gray-600">Elige el canal que mejor se adapte a tus necesidades</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {contactMethods.map((method) => (
            <div class="bg-gray-50 rounded-lg p-8 text-center hover:shadow-lg transition-shadow">
              <div class="w-16 h-16 bg-blue-100 text-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
                <method.icon class="w-8 h-8" />
              </div>
              
              <h3 class="text-xl font-semibold text-gray-900 mb-2">{method.title}</h3>
              <p class="text-gray-600 mb-4">{method.description}</p>
              
              <div class="mb-4">
                <p class="text-lg font-medium text-gray-900">{method.details}</p>
                <p class="text-sm text-gray-500 mt-1">{method.available}</p>
              </div>
              
              <a 
                href={method.action}
                class="inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors w-full"
              >
                <method.icon class="mr-2 w-5 h-5" />
                {method.actionText}
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Visit Us Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Location Info -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Visítanos</h2>
            
            <div class="space-y-6">
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <MapPin class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Dirección</h3>
                  <p class="text-gray-600">
                    {visitInfo.address}<br>
                    {visitInfo.city}
                  </p>
                </div>
              </div>
              
              <div class="flex items-start space-x-4">
                <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center flex-shrink-0">
                  <Clock class="w-6 h-6" />
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-gray-900 mb-1">Horario</h3>
                  <div class="space-y-1 text-gray-600">
                    {visitInfo.schedule.map((item) => (
                      <div class="flex justify-between">
                        <span class="font-medium">{item.day}:</span>
                        <span>{item.hours}</span>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mt-8">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Cómo llegar</h3>
              <div class="bg-white rounded-lg p-4 border border-gray-200">
                <p class="text-gray-600 mb-4">
                  Estamos bien comunicados con transporte público:
                </p>
                <ul class="space-y-2 text-sm text-gray-600">
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-blue-600 rounded-full mr-3"></div>
                    Autobús: Líneas 1, 3, 5 (parada a 2 minutos)
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-blue-600 rounded-full mr-3"></div>
                    Tren: Estación de Mataró (10 minutos andando)
                  </li>
                  <li class="flex items-center">
                    <div class="w-2 h-2 bg-blue-600 rounded-full mr-3"></div>
                    Aparcamiento: Zona azul en la calle
                  </li>
                </ul>
              </div>
            </div>
          </div>
          
          <!-- Map Placeholder -->
          <div>
            <div class="bg-gray-200 rounded-lg h-96 flex items-center justify-center">
              <div class="text-center">
                <MapPin class="w-16 h-16 text-gray-400 mx-auto mb-4" />
                <p class="text-gray-600 font-medium">Mapa de ubicación</p>
                <p class="text-sm text-gray-500 mt-2">
                  <a 
                    href="https://maps.google.com/?q=Carrer+de+l'Exemple+123+Mataró+Barcelona"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-blue-600 hover:text-blue-800"
                  >
                    Ver en Google Maps
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Preguntas Frecuentes</h2>
          <p class="text-lg text-gray-600">Respuestas a las dudas más comunes sobre contactar con nosotros</p>
        </div>
        
        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="bg-gray-50 rounded-lg p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-3">{faq.question}</h3>
              <p class="text-gray-600">{faq.answer}</p>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-8">
          <p class="text-gray-600 mb-4">
            ¿No encuentras la respuesta a tu pregunta?
          </p>
          <a href="https://wa.me/34600000000" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
            <MessageCircle class="mr-2 w-5 h-5" />
            Contactar por WhatsApp
          </a>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 bg-blue-50">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Formulario de Contacto</h2>
          <p class="text-lg text-gray-600">Envíanos tu consulta y te responderemos lo antes posible</p>
        </div>
        
        <form class="bg-white rounded-lg shadow-sm p-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-1">
                Nombre completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              />
            </div>
          </div>
          
          <div class="mb-6">
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">
              Asunto
            </label>
            <select
              id="subject"
              name="subject"
              class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
            >
              <option value="">Selecciona un asunto</option>
              <option value="information">Información general</option>
              <option value="membership">Asociación</option>
              <option value="services">Servicios</option>
              <option value="volunteering">Voluntariado</option>
              <option value="collaboration">Colaboración</option>
              <option value="other">Otro</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-1">
              Mensaje *
            </label>
            <textarea
              id="message"
              name="message"
              rows={5}
              required
              class="block w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
              placeholder="Escribe tu mensaje aquí..."
            ></textarea>
          </div>
          
          <button
            type="submit"
            class="w-full inline-flex items-center justify-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors"
          >
            <Send class="mr-2 w-5 h-5" />
            Enviar mensaje
          </button>
        </form>
      </div>
    </section>
  </main>
</BaseLayout>