---
import { Phone, Mail, MapPin, Heart, Facebook, Instagram, Twitter } from 'lucide-react';

const footerLinks = {
  explora: [
    { name: 'Quiénes Somos', href: '/quienes-somos/' },
    { name: 'Servicios', href: '/servicios/' },
    { name: 'Blog', href: '/blog/' },
    { name: 'Recursos', href: '/recursos/' },
  ],
  actividades: [
    { name: 'Calendario', href: '/servicios/#calendario' },
    { name: 'Eventos', href: '/servicios/#eventos' },
    { name: 'Noticias', href: '/blog/' },
    { name: 'Voluntariado', href: '/contacto/#voluntariado' },
  ],
  legal: [
    { name: 'Política de Privacidad', href: '/privacidad/' },
    { name: 'Accesibilidad', href: '/accesibilidad/' },
    { name: 'Cookies', href: '/cookies/' },
  ],
};

const socialLinks = [
  { name: 'WhatsApp', href: 'https://wa.me/34600000000', icon: Phone },
  { name: 'Facebook', href: '#', icon: Facebook },
  { name: 'Instagram', href: '#', icon: Instagram },
  { name: 'Twitter', href: '#', icon: Twitter },
];

const contactInfo = [
  { icon: Phone, text: '+34 600 000 000', href: 'tel:+34600000000' },
  { icon: Mail, text: 'info@divermataro.org', href: 'mailto:info@divermataro.org' },
  {
    icon: MapPin,
    text: "Carrer de l'Exemple 123, 08302 Mataró",
    href: 'https://maps.google.com/?q=Mataró,Barcelona',
  },
];
---

<footer class="bg-gray-900 text-gray-300 border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 pb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
      <!-- Brand Column -->
      <div class="space-y-6">
        <div class="flex items-center space-x-3">
          <div
            class="w-10 h-10 bg-blue-600 rounded-xl flex items-center justify-center shadow-lg shadow-blue-900/20"
          >
            <span class="text-white font-bold text-xl">DM</span>
          </div>
          <div>
            <h3 class="text-white text-lg font-bold leading-tight">DiverMataró</h3>
            <p class="text-xs text-blue-400 font-medium">Asociación Inclusiva</p>
          </div>
        </div>
        <p class="text-sm leading-relaxed text-gray-400">
          Trabajamos día a día por una sociedad más justa, accesible e inclusiva para todas las
          personas en Mataró y el Maresme.
        </p>
        <div class="flex space-x-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 rounded-full bg-gray-800 flex items-center justify-center text-gray-400 hover:bg-blue-600 hover:text-white transition-all duration-300 transform hover:-translate-y-1"
                aria-label={`Síguenos en ${social.name}`}
              >
                <social.icon className="w-5 h-5" />
              </a>
            ))
          }
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-semibold mb-6 relative inline-block">
          Explora
          <span class="absolute -bottom-2 left-0 w-1/2 h-1 bg-blue-600 rounded-full"></span>
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.explora.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm hover:text-blue-400 transition-colors flex items-center group"
                >
                  <span class="w-1.5 h-1.5 bg-blue-600 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Activities -->
      <div>
        <h4 class="text-white font-semibold mb-6 relative inline-block">
          Participa
          <span class="absolute -bottom-2 left-0 w-1/2 h-1 bg-green-500 rounded-full"></span>
        </h4>
        <ul class="space-y-3">
          {
            footerLinks.actividades.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm hover:text-green-400 transition-colors flex items-center group"
                >
                  <span class="w-1.5 h-1.5 bg-green-500 rounded-full mr-2 opacity-0 group-hover:opacity-100 transition-opacity" />
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-white font-semibold mb-6 relative inline-block">
          Contacto
          <span class="absolute -bottom-2 left-0 w-1/2 h-1 bg-purple-500 rounded-full"></span>
        </h4>
        <ul class="space-y-4">
          {
            contactInfo.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="group flex items-start space-x-3 text-sm hover:text-white transition-colors"
                >
                  <div class="mt-1 p-1.5 rounded-lg bg-gray-800 group-hover:bg-purple-500/20 group-hover:text-purple-400 transition-colors">
                    <item.icon className="w-4 h-4" />
                  </div>
                  <span class="leading-relaxed">{item.text}</span>
                </a>
              </li>
            ))
          }
        </ul>
        <div class="mt-8">
          <a
            href="/inscripcion/"
            class="w-full inline-flex items-center justify-center space-x-2 bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-lg text-sm font-semibold hover:from-blue-700 hover:to-purple-700 transition-all shadow-lg shadow-blue-900/30 transform hover:scale-[1.02]"
          >
            <Heart className="w-4 h-4" />
            <span>Hazte Socio/a</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="pt-8 mt-8 border-t border-gray-800 flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0"
    >
      <div class="text-sm text-gray-500 text-center md:text-left">
        <p>&copy; {new Date().getFullYear()} DiverMataró. Todos los derechos reservados.</p>
      </div>
      <div class="flex flex-wrap justify-center gap-6 text-sm">
        {
          footerLinks.legal.map((link) => (
            <a href={link.href} class="text-gray-500 hover:text-white transition-colors">
              {link.name}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
