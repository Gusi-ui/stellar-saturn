---
import ThemeToggle from './ThemeToggle.tsx';

const navigation = [
  { name: 'Inicio', href: '/' },
  { name: 'Quiénes Somos', href: '/quienes-somos/' },
  { name: 'Servicios', href: '/servicios/' },
  { name: 'Blog', href: '/blog/' },
];

const contactLink = { name: 'Contacto', href: '/contacto/', phone: 'https://wa.me/34600000000' };
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-white/90 dark:bg-gray-900/90 backdrop-blur-xl border-b border-orange-200/20 dark:border-orange-800/20 shadow-2xl shadow-orange-500/5 dark:shadow-orange-500/10"
>
  <!-- Gradiente decorativo en la parte superior -->
  <div
    class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-orange-500 via-amber-500 to-orange-500 opacity-60"
  >
  </div>

  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="group relative">
          <div class="relative">
            <div
              class="absolute -inset-2 bg-gradient-to-r from-orange-400 to-amber-400 rounded-full blur-lg opacity-0 group-hover:opacity-40 transition-opacity duration-500"
            >
            </div>
            <div
              class="relative bg-gradient-to-br from-white to-orange-50 dark:from-gray-800 dark:to-gray-700 p-2 rounded-xl shadow-lg border border-white/70 dark:border-gray-500"
            >
              <img
                src="/logoDiverMataro.png"
                alt="DiverMataró"
                class="h-12 w-auto object-contain transition-all duration-500 group-hover:scale-105"
              />
            </div>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1.5">
        {
          navigation.map((item) => {
            const isActive = Astro.url.pathname === item.href;
            return (
              <a
                href={item.href}
                class="group relative"
                aria-current={isActive ? 'page' : undefined}
              >
                <div class="relative">
                  {/* Glow effect - siempre visible si está activo */}
                  <div
                    class={`absolute -inset-2 bg-gradient-to-r from-orange-400 to-amber-400 rounded-xl blur-lg transition-opacity duration-500 ${isActive ? 'opacity-40' : 'opacity-0 group-hover:opacity-40'}`}
                  />

                  {/* Contenedor con gradiente y borde - destacado si está activo */}
                  <div
                    class={`relative px-3 py-2 rounded-xl shadow-md group-hover:shadow-xl border transition-all duration-500 group-hover:scale-105 ${
                      isActive
                        ? 'bg-gradient-to-br from-orange-50 to-amber-50 dark:from-orange-900/30 dark:to-amber-900/30 border-orange-400/70 dark:border-orange-600/70 shadow-lg scale-105'
                        : 'bg-gradient-to-br from-white to-orange-50/30 dark:from-gray-800 dark:to-gray-700/50 border-white/70 dark:border-gray-600/50'
                    }`}
                  >
                    <span
                      class={`text-sm font-semibold transition-colors duration-300 whitespace-nowrap ${
                        isActive
                          ? 'text-orange-600 dark:text-orange-400'
                          : 'text-gray-800 dark:text-gray-200 group-hover:text-orange-600 dark:group-hover:text-orange-400'
                      }`}
                    >
                      {item.name}
                    </span>
                  </div>
                </div>
              </a>
            );
          })
        }
      </div>

      <!-- Right Section -->
      <div class="hidden lg:flex items-center space-x-3">
        <!-- Contacto con teléfono más prominente -->
        <a
          href={contactLink.href}
          class="group relative flex items-center gap-2 px-3 py-2 rounded-xl hover:bg-orange-50 dark:hover:bg-orange-900/20 transition-all duration-300"
        >
          <span
            class="text-sm font-semibold text-gray-800 dark:text-gray-200 group-hover:text-orange-600 dark:group-hover:text-orange-400 transition-colors whitespace-nowrap"
          >
            {contactLink.name}
          </span>
          <a
            href={contactLink.phone}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2.5 bg-gradient-to-br from-orange-500 to-amber-500 text-white rounded-xl hover:from-orange-600 hover:to-amber-600 transition-all duration-300 hover:scale-110 shadow-lg hover:shadow-xl"
            aria-label="Llamar por WhatsApp"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              stroke-width="2.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </a>
        </a>

        <!-- Botón Asociarse -->
        <a
          href="/inscripcion/"
          class="group relative px-4 py-2 bg-gradient-to-r from-orange-600 to-amber-600 text-white text-sm font-bold rounded-xl overflow-hidden shadow-xl hover:shadow-2xl hover:shadow-orange-500/40 transition-all duration-300 transform hover:scale-105 whitespace-nowrap"
        >
          <span
            class="absolute inset-0 bg-gradient-to-r from-orange-700 to-amber-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          ></span>
          <span
            class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"
          ></span>
          <span class="relative z-10 flex items-center gap-1.5">
            <svg
              class="w-4 h-4 group-hover:scale-110 transition-transform duration-300"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              ></path>
            </svg>
            <span class="group-hover:tracking-wider transition-all duration-300">Asociarse</span>
          </span>
        </a>

        <!-- Dark Mode Toggle -->
        <ThemeToggle client:load />
      </div>

      <div class="lg:hidden">
        <button
          type="button"
          class="p-2 bg-white/30 dark:bg-gray-800/30 backdrop-blur-lg rounded-xl border border-white/50 dark:border-gray-600/50 text-gray-700 dark:text-gray-300 hover:text-orange-600 dark:hover:text-orange-400 transition-all duration-300"
          aria-expanded="false"
          aria-controls="mobile-menu"
          id="mobile-menu-toggle"
        >
          <span class="sr-only">Abrir menú principal</span>
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="mobile-menu" class="hidden lg:hidden mt-4">
      <div
        class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-2xl border border-white/50 dark:border-gray-600/50 p-4 shadow-2xl"
      >
        <div class="space-y-3 mb-4">
          {
            navigation.map((item) => {
              const isActive = Astro.url.pathname === item.href;
              return (
                <a
                  href={item.href}
                  class="group relative block"
                  aria-current={isActive ? 'page' : undefined}
                >
                  <div class="relative">
                    {/* Glow effect - visible si está activo */}
                    <div
                      class={`absolute -inset-1 bg-gradient-to-r from-orange-400 to-amber-400 rounded-xl blur transition-opacity duration-500 ${isActive ? 'opacity-30' : 'opacity-0 group-hover:opacity-30'}`}
                    />

                    {/* Contenedor - destacado si está activo */}
                    <div
                      class={`relative px-5 py-3 rounded-xl shadow group-hover:shadow-lg border transition-all duration-500 group-hover:scale-105 ${
                        isActive
                          ? 'bg-gradient-to-br from-orange-50 to-amber-50 dark:from-orange-900/30 dark:to-amber-900/30 border-orange-400/70 dark:border-orange-600/70 shadow-lg scale-105'
                          : 'bg-gradient-to-br from-white to-orange-50/30 dark:from-gray-800 dark:to-gray-700/50 border-white/70 dark:border-gray-600/50'
                      }`}
                    >
                      <span
                        class={`text-base font-semibold transition-colors duration-300 ${
                          isActive
                            ? 'text-orange-600 dark:text-orange-400'
                            : 'text-gray-800 dark:text-gray-200 group-hover:text-orange-600 dark:group-hover:text-orange-400'
                        }`}
                      >
                        {item.name}
                      </span>
                    </div>
                  </div>
                </a>
              );
            })
          }
        </div>

        <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
          <div class="flex items-center justify-between mb-3">
            {/* Botón teléfono más prominente en móvil */}
            <a
              href={contactLink.phone}
              target="_blank"
              rel="noopener noreferrer"
              class="flex-1 flex items-center justify-center gap-2 p-3 bg-gradient-to-br from-orange-500 to-amber-500 text-white rounded-xl hover:from-orange-600 hover:to-amber-600 transition-all duration-300 shadow-lg mr-3"
              aria-label="Llamar por WhatsApp"
            >
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2.5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <span class="font-semibold">Llamar</span>
            </a>
            {/* Dark Mode */}
            <ThemeToggle client:load />
          </div>

          <a
            href="/inscripcion/"
            class="group relative w-full inline-flex items-center justify-center px-5 py-3.5 bg-gradient-to-r from-orange-600 to-amber-600 text-white text-base font-bold rounded-xl overflow-hidden shadow-xl hover:shadow-2xl hover:shadow-orange-500/40 transition-all duration-300 transform hover:scale-105"
          >
            <span
              class="absolute inset-0 bg-gradient-to-r from-orange-700 to-amber-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
            ></span>
            <span
              class="absolute inset-0 bg-white/20 translate-y-full group-hover:translate-y-0 transition-transform duration-300"
            ></span>
            <span class="relative z-10 flex items-center gap-2">
              <svg
                class="w-5 h-5 group-hover:scale-110 transition-transform duration-300"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
                ></path>
              </svg>
              <span class="group-hover:tracking-wider transition-all duration-300">Asociarse</span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<div class="h-20"></div>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');
  if (toggle && menu) {
    toggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
      const expanded = toggle.getAttribute('aria-expanded') === 'true';
      toggle.setAttribute('aria-expanded', expanded ? 'false' : 'true');
    });
  }
</script>
